
<strong>User Name:</strong>
  <%= @user.username %>

<% if @user.profile_image.attached? %>
  <%= image_tag @user.profile_image, alt: @user.username %>
<% else %>
  <%= image_tag"placeholder_user.png", alt: @user.username %>
<% end %>


<%= @user.profile  %>

<% if current_user.id == @user.id %>
  <%= link_to 'Edit Profile', edit_user_path(@user) %> 
<% end %>


