<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>List image</th>
      <th>Title</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
      <% if listing.list_images.attached? %>
        <td>
        <%= link_to (image_tag listing.list_images[0].variant(resize_to_limit: [100,100])), listing %>
        </td>
      <% else %>
        <td><%= link_to (image_tag "no-image.png"), listing %></td>
      <% end %>
        <td><%= listing.title %></td>
        <td>$ <%= listing.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
